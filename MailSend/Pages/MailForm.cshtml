@page
@model MailSend.Models.MailDto
@{

}

<form id="frm">
    <div class="form-group">
        <label>Konu</label>
        <input type="text" class="form-control" id="subject" asp-for="Subject">
    </div>
    <div class="form-group">
        <label >İçerik</label>
        <textarea type="text" class="form-control" id="body" asp-for="Body"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>

<script>

    $('#frm').submit(function (e) {
        e.preventDefault();

        var dto = {
            Body: $('#subject').val(),
            Subject: $('#body').val()
        };

        $.ajax({
            type: "POST",
            url: 'api/mailsend',
            data: JSON.stringify(dto),
            contentType: 'application/json',
            success: function (data) {
                alert(data);
            }
        });

    });

</script>